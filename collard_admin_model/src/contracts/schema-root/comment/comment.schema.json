{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema-root/comment",
  "title": "CommentContract",
  "description": "Comment",
  "type": "object",
  "required": ["id", "Content", "MovieId", "UserId"],
  "properties": {
    "id": {
      "description": "Unique identifier of comment as a GUID",
      "type": "string",
      "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
    },
    "Content": { "type": "string" },
    "MovieId": {
      "type": "string",
      "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
    },
    "UserId": {
      "type": "string",
      "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
    }
  },
  "additionalProperties": false
}
