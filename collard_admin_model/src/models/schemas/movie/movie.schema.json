{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/movie",
  "title": "Movie base model",
  "description": "Movie model",
  "type": "object",

  "required": [
    "Name",
    "Year",
    "ImdbLink",
    "ImdbScore",
    "Genres",
    "Director",
    "LeadingActors"
  ],
  "properties": {
    "Name": {
      "type": "string",
      "minLength": 2,
      "description": "Name of a movie"
    },
    "Year": {
      "type": "number",
      "description": "Year of production"
    },
    "OriginalCountry": {
      "anyOf": [{
        "$ref": "../../../common/common-definitions.schema.json#/definitions/EntityReference"
      }, {
        "type": "null"
      }]
    },
    "OriginalLanguage": {
      "anyOf": [{
          "$ref": "../../../common/common-definitions.schema.json#/definitions/EntityReference"
        },
        {
          "type": "null"
        }
      ]
    },
    "ImdbLink": {
      "type": "string"
    },
    "ImdbScore": {
      "type": "number"
    },
    "Genres": {
      "type": "array",
      "maxItems": 3,
      "items": {
        "type": "string",
        "enum": [
          "Animation",
          "Adventure",
          "Action",
          "Comedy",
          "Family",
          "Horror",
          "Thriller",
          "Crime",
          "Drama",
          "Romance",
          "Fantasy"
        ]
      }
    },
    "LeadingActors": {
      "type": "array",
      "maxItems": 3,
      "items": {
        "$ref": "../../../common/common-definitions.schema.json#/definitions/EntityReference"
      },
      "description": "Leading actors"
    },
    "Director": {
      "$ref": "../../../common/common-definitions.schema.json#/definitions/EntityReference",
      "description": "Director"
    },
    "ImagesUrls": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}